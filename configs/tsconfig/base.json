{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": false,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES2021",
        "lib": [
            "ESNext"
        ],
        "outDir": "dist",
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "dist",
        "bin"
    ]
}